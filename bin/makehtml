#!/bin/sh

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
cd $DIR/../pages_md

if [ $# -eq 1 ]
then
    echo "  "${1/md/html}
    pandoc -s --template=template.html \
           -o ../alaskaflora.org/pages/${1/md/html} $1
    # check
    tidy -e ../alaskaflora.org/pages/${1/md/html} 2>&1 >/dev/null | grep errors
else
    ../bin/makesitemap
    ../bin/makerss
    for i in [A-Za-z]*.md
    do
        echo "  "${i/md/html}
        pandoc -s --template=template.html -o ../alaskaflora.org/pages/${i/md/html} $i
    done
fi

